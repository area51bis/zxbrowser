<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ses.app.zxlauncher.ui.ErrorDialog">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <center>
      <TextArea fx:id="detailsText" prefHeight="200.0" prefWidth="200.0">
         <BorderPane.margin>
            <Insets bottom="8.0" top="8.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#onOkButtonClick" text="%ok" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Button>
   </bottom>
   <top>
      <Label fx:id="messageLabel" text="message" BorderPane.alignment="TOP_LEFT" />
   </top>
</BorderPane>
